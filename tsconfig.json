{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6", "DOM"
    ],
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "out",
    "out-node",
    "out-browser"
    ]
}
