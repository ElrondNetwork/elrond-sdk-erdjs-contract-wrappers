{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6",
      "DOM"
    ],
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "out",
    "out-node",
    "out-browser"
  ]
}